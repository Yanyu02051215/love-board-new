<div class="aside">
  <div class="search2">
    <%= search_form_for @search do |f|%>
      <%= f.search_field :title_or_body_cont , placeholder: '質問を検索',class:"search-box__text"%>
      <%= button_tag type: 'submit', class: "search-box__btn" do %>
      <%= icon('fas', 'search') %>
      <% end %>
    <%end%>
  </div>
  <%= sort_link(@search, :created_at, "作成日順", default_order: :desc)%>
  <%= sort_link(@search, :answers_count, "回答数順", default_order: :desc)%>
  <%= sort_link(@search, :bookmarks_count, "ブックマーク数順" , default_order: :desc)%>
</div>